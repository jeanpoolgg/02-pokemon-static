---
import { ClientRouter } from "astro:transitions";
import { siteInfo } from "src/consts/site-info";
import "../styles/global.css";
import NavBar from "src/shared/NavBar.astro";

interface Props {
	title?: string;
	image?: string;
	description?: string;
}


const { title = siteInfo.title, description = siteInfo.description, image } = Astro.props;

---


<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="generator" content={Astro.generator} >

	<!-- SEO -->
	<meta name="description" content={description}>
	<meta name="author" content={'Jean Pool Gutierrez'}>

	<!-- OG Metatags -->
	<meta property="og:title" content={title}>
	<meta property="og:description" content={description}>
	<meta property="og:image" content={image}>

	<title>{title}</title>
	<ClientRouter />
</head>
<body class="bg-slate-800 text-slate-100" >
	<NavBar/>
	<main class="mt-10 m-auto max-w-3xl mx-4" >
		<slot/>
	</main>
</body>
</html>